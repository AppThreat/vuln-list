  "Metadata": {
    "Title": "RHSA-2020:3504: Red Hat Ceph Storage 3.3 security and bug fix update (Moderate)",
    "AffectedList": [
      {
        "Family": "unix",
        "Platforms": [
          "Red Hat Ceph Storage 3.3"
        ]
      }
    ],
    "References": [
